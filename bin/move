#!/usr/bin/env ruby

require_relative '../lib/move.rb'
require_relative '../lib/input_to_index.rb'
require_relative '../lib/display_board.rb'

# Code your CLI Here
puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
input = gets.strip
index = input_to_index(input)
move(board, index)
display_board(board)
